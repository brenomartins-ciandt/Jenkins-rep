pipeline {
    agent any
	stages {
        stage ('Building application image'){
            steps {
                sh 'docker build -t aplic_java2 -f Dockerfile .'

            }
        }
        stage ('Compose Up Stage'){                
            steps {
                sh 'docker-compose up -d'
                sleep(5)
            }
        }
        stage ('Setting BD'){
            steps {
                withCredentials ([string(credentialsId: 'senha', variable: 'SENHA')]){
                    sh 'PGPASSWORD=$SENHA psql    --host=172.38.1.2    --port=5432   --username=postgres --no-password  --file acesso_init.sql'
                }
            }
        }
    }
}
